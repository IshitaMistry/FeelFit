<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_res2"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgdietvegf"
                android:layout_width="85dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/crowfile"/>

            <TextView
                android:id="@+id/vegdiet_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="29dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/imgdietvegf"
                android:hint="amount"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/vegdietFname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vegdiet_amount"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@+id/imgdietvegf"
                android:hint="name"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/calorievegd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="57dp"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="63dp"
                android:layout_marginBottom="25dp"
                android:layout_toEndOf="@+id/vegdietFname"
                android:layout_toRightOf="@id/vegdietFname"
                android:hint="50mg"
                android:textSize="35sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>