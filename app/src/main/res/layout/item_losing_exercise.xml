<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_res"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="141dp">

            <ImageView
                android:id="@+id/image_exercise_one"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:src="@drawable/number1"></ImageView>

            <TextView
                android:id="@+id/text_Exercise"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@+id/image_exercise_one"
                android:text="EXERCISE 1"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:id="@+id/img_run"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="32dp"
                android:layout_toRightOf="@+id/text_Exercise"
                android:scaleType="fitXY"
                android:src="@drawable/jogging"></ImageView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>